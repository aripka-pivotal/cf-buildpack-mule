#!/usr/bin/env bash
# bin/release <build-dir>
cat << EOF
addons: 
config_vars:
   MULE_HOME=/app/local/mule-standalone-3.5.0 
   JAVA_HOME=/app/local/jdk1.7.0_67 
   PATH=/app/local/jdk1.7.0_67/bin:/app/local/mule-standalone-3.5.0/bin:\$PATH
default_process_types:
   web: MULE_HOME=/app/local/mule-standalone-3.5.0 JAVA_HOME=/app/local/jdk1.7.0_67 PATH=/app/local/jdk1.7.0_67/bin:/app/local/mule-standalone-3.5.0/bin:\$PATH mule -M-Dhttp.port=\$PORT; echo $PATH; ruby -run -e httpd . -p \$PORT
EOF

#!/usr/bin/env bash
# bin/release <build-dir>
BUILD_DIR=$1
cat << EOF
addons:
config_vars:
  MULE_HOME: $BUILD_DIR/local/mule-standalone-3.5.0
  JAVA_HOME: $BUILD_DIR/local/jdk1.7.0_67
  PATH: $BUILD_DIR/local/jdk1.7.0_67/bin:$BUILD_DIR/local/mule-standalone-3.5.0/bin:$PATH
default_process_types:
  web: echo $PORT 
EOF
